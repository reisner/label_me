<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @image %>">
  <p>
    <strong>Name:</strong>
    <%= @image.name %>
  </p>

  <p>
    <%= link_to image_tag(@image.image_file.variant(:thumb)), @image.image_file, target: :_blank %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= @image.notes %>
  </p>
</div>

<div>
  <%= link_to "Edit this image", edit_image_path(@image) %> |
  <%= link_to "Back to images", images_path %>

  <%= button_to "Destroy this image", @image, method: :delete %>
</div>
